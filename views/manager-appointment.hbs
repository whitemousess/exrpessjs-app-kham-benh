<div class="container" style="margin-top: 20px;">
    <h3 class="text-center mt-2"><b>Danh sách lịch</b></h3>

    <div class="container">
        <table id="example">
            <thead>
                <tr>
                    <th>Tên người đặt</th>
                    <th>Giới tính</th>
                    <th>Tên bác sĩ</th>
                    <th>Nhắc nhở</th>
                    <th>Tình trạng</th>
                </tr>
            </thead>
            <tbody>
                {{#each appointments}}
                <tr>
                    <td>{{Name}}</td>
                    <td>{{Gender}}</td>
                    <td>{{Doctor}}</td>
                    <td>{{Note}}</td>
                    <td>{{Status}}</td>
                </tr>
                {{/each}}

        </table>
    </div>
</div>

<style>
    html,
    body {
        height: 100%;
    }

    body {
        margin: 0;
        font-family: sans-serif;
        font-weight: 100;
    }

    table {
        width: 1280px;
        border-collapse: collapse;
        border-radius: 5px;
        overflow: hidden;
        margin-bottom: 30px;
        box-shadow: rgba(60, 64, 67, 0.3) 0px 1px 2px 0px, rgba(60, 64, 67, 0.15) 0px 2px 6px 2px;
    }

    th,
    td {
        padding: 20px;
        background-color: rgba(255, 255, 255, 0.2);
        color: #000000;
    }

    th {
        text-align: left;
    }

    thead th {
        background-color: #1eb2c5;
        color: aliceblue;
    }

    tbody tr:hover {
        background-color: rgba(255, 255, 255, 0.3);
    }

    tbody td {
        position: relative;
    }

    tbody td:hover:before {
        content: "";
        position: absolute;
        left: 0;
        right: 0;
        top: -9999px;
        bottom: -9999px;
        background-color: rgba(255, 255, 255, 0.2);
        z-index: -1;
    }
</style>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>