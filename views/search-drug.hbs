<style>
  html,
  body {
    height: 100%;
  }

  body {
    margin: 0;
    font-family: sans-serif;
    font-weight: 100;
  }

  table {
    width: 1280px;
    border-collapse: collapse;
    border-radius: 5px;
    overflow: hidden;
    margin-bottom: 30px;
    box-shadow: rgba(60, 64, 67, 0.3) 0px 1px 2px 0px, rgba(60, 64, 67, 0.15) 0px 2px 6px 2px;
  }

  th,
  td {
    padding: 20px;
    background-color: rgba(255, 255, 255, 0.2);
    color: #000000;
  }

  th {
    text-align: left;
  }

  thead th {
    background-color: #1eb2c5;
    color: aliceblue;
  }

  tbody tr:hover {
    background-color: rgba(255, 255, 255, 0.3);
  }

  tbody td {
    position: relative;
  }

  tbody td:hover:before {
    content: "";
    position: absolute;
    left: 0;
    right: 0;
    top: -9999px;
    bottom: -9999px;
    background-color: rgba(255, 255, 255, 0.2);
    z-index: -1;
  }
