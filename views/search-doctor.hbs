<div class="container" style="margin-top: 20px;">
<h3 class="text-center mt-2"><b>Danh sách bác sĩ</b></h3>

    <div class="container">
	<table  id="example" >
	  <thead>
            <tr>
                <th>Tên bác sĩ</th>
                <th>Giới tính</th>
                <th>Bệnh lý</th>
                <th>Chuyên khoa</th>
                <th>Điện thoại</th>
                <th>Học vị</th>
                  {{#ifEquals role "admin"}}
                <th>Hành động</th>
                {{/ifEquals}}
            </tr>
        </thead>
         {{#ifEquals role "admin"}}
       <button class="btn  py-3" type="submit" data-bs-toggle="modal" data-bs-target="#add" style="margin-top: 20px;background-color:#1eb2c5;color:#fff;width:200px;border-radius:10px;margin-bottom: 20px">       
                   Thêm bác sĩ
       </button>
         {{/ifEquals}}
        <tbody>
            {{#each doctors}}
            <tr>
                <td ><a style="color: #000000;" href="/bac-si/{{ID}}-{{Name}}">{{Name}}</a></td>
                <td>{{Gender}}</td>
                <td>{{Sick}}</td>
                <td>{{Specialist}}</td>
                <td>{{Phone}}</td>
                <td>{{Title}}</td>
                 {{#ifEquals ../role "admin"}}
                <td>
                    <div class="d-flex">
                        <a type="button" class="d-block me-2" data-bs-toggle="modal" data-bs-target="#editServiceModal{{ID}}">
                            <i class="bi bi-pencil-square"></i>
                        </button>
                        <a type="button" class="d-block" data-bs-toggle="modal" data-bs-target="#deleteServiceModal{{ID}}">
                            <i class="bi bi-trash3"></i>
                        </a>
                    </div>
                </td>
                {{/ifEquals}}
            </tr>
            {{/each}}
        
	</table>
</div>
</div>
{{#each doctors}}
<!-- Modal -->
<div class="modal fade" id="editServiceModal{{ID}}" tabindex="-1" aria-labelledby="editServiceModal{{ID}}"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Chỉnh sửa thông tin bác sĩ</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form class="px-md-2" id="editServiceForm{{ID}}" action="/chinh-sua/bac-si/{{ID}}" method="POST">
                    <div class="form-floating mb-4">
                        <input type="text" id="Name{{ID}}" class="form-control" name="Name"
                            value="{{Name}}" required />
                        <label class="form-label" for="Name{{ID}}">Tên bác sĩ</label>
                    </div>
                     <div class="form-floating mb-4">
                        
                         <label style="margin-bottom: 50px; margin-left: 10px;"
                                            class="form-check-label text-black" for="male">Nam</label>
                       <input style="margin-bottom: 10px;" class="form-check-input bg-light" type="radio"
                                            name="Gender" id="male" value="Nam" {{#ifEquals Gender "Nam"}}checked{{/ifEquals}} required>
                                       
                        <input style="margin-bottom: 10px; margin-left: 50px;"
                            class="form-check-input bg-light" type="radio" name="Gender" id="female"
                            value="Nữ"{{#ifEquals Gender "Nữ"}}checked{{/ifEquals}} required>
                        <label style="margin-bottom: 50px; margin-left:80px" class="form-check-label text-black"
                            for="female">Nữ</label>
                    </div>
                              <label class="form-label" for="Name{{ID}}">Tên bệnh lý</label>

                    <div class="form-floating mb-4">

                              <select class="form-select " style="height: 200px;"   name="Sick" id="multiple-select"  required multiple>
                                 <option value="">{{ Sick }}</option>
                                  {{#each ../sicks}}
                                  <option  value="{{SickName}}">{{SickName}}</option>
                                  {{/each}}
                              </select>
                    </div>

                    <div class="form-floating mb-4">
                        <input type="text" id="Specialist{{ID}}" class="form-control" name="Specialist"
                            value="{{Specialist}}" required />
                        <label class="form-label" for="Specialist{{ID}}">Chuyên môn</label>
                    </div>

                     <div class="form-floating mb-4">
                        <input type="text" id="Phone{{ID}}" class="form-control" name="Phone"
                            value="{{Phone}}" required />
                        <label class="form-label" for="Phone{{ID}}">Số điện thoại</label>
                    </div>

                     <div class="form-floating mb-4">
                        <input type="text" id="Title{{ID}}" class="form-control" name="Title"
                            value="{{Title}}" required />
                        <label class="form-label" for="Title{{ID}}">Học vị</label>
                    </div>


                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="submit" class="btn btn-primary" form="editServiceForm{{ID}}">Xác nhận</button>
            </div>
        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="deleteServiceModal{{ID}}" tabindex="-1" aria-labelledby="deleteServiceModal{{ID}}"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xóa bác sĩ</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Bạn có chắc chắn muốn xóa dịch vụ <i>{{Name}}</i>?
                <form class="px-md-2" id="deleteServiceForm{{ID}}" action="/chinh-sua/bac-si/xoa/{{ID}}" method="POST">
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="submit" class="btn btn-primary" form="deleteServiceForm{{ID}}">Xác nhận</button>
            </div>
        </div>
    </div>
</div>
{{/each}}

